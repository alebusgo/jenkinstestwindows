pipeline {

    agent any

    tools {
        gradle 'Gradle 7.3'
    }

    options{
        ansiColor('xterm')
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                bat 'gradle clean build -x test'
            }
        }
        stage('Test'){
            steps{
                echo 'Running automated tests'
                bat "gradle clean test -Denvironment=qa -Dtags=walkthrough aggregate"
            }
        }
    }
}